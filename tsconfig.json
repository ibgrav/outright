{
  "include": ["src"],
  "exclude": ["src/adapters/deno"],

  "compilerOptions": {
    "outDir": "dist",

    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",

    "lib": ["ESNext", "DOM"],

    "strict": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true
  }
}
